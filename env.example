# QR Profile Management System - Environment Variables
# Copy this file to .env.local and update with your actual values

# ================================
# Database Configuration
# ================================
DATABASE_URL="postgresql://username:password@localhost:5432/qr_profile_management"

# ================================
# Supabase
# ================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-public-anon-key"
# Server-side only, never expose publicly
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ================================
# Authentication (NextAuth.js)
# ================================
NEXTAUTH_SECRET="your-super-secret-key-here-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# ================================
# OAuth Providers (Optional)
# ================================
# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# ================================
# Error Monitoring & Analytics
# ================================
# Sentry Configuration
SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="qr-profile-management"

# Google Analytics (Optional)
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# ================================
# Email Service (Optional)
# ================================
# For sending QR codes and notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# ================================
# File Storage (Optional)
# ================================
# For storing QR code images and profile assets
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="qr-profile-assets"

# ================================
# QR Code Service Configuration
# ================================
# QR Code generation settings
QR_CODE_BASE_URL="https://yourdomain.com/qr"
QR_CODE_DEFAULT_SIZE="300"
QR_CODE_ERROR_CORRECTION="M"

# ================================
# Rate Limiting & Security
# ================================
# Arcjet Configuration
ARCJET_KEY="your-arcjet-key"

# ================================
# Development & Testing
# ================================
# Only needed for development
NODE_ENV="development"

# Logging level (error, warn, info, debug)
LOG_LEVEL="info"

# ================================
# Internationalization
# ================================
# Default locale
NEXT_PUBLIC_DEFAULT_LOCALE="en"

# ================================
# Feature Flags (Optional)
# ================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_BULK_OPERATIONS="true"
NEXT_PUBLIC_ENABLE_TEMPLATE_SHARING="true" 